{
  "name": "meili-sync",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "bin": {
    "meili-sync": "dist/cli.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "pretest": "npm run lint && npm run typecheck",
    "typecheck": "tsc",
    "test": "npm run ava",
    "ava": "ava",
    "watch:test": "ava --watch",
    "lint": "eslint --quiet --ext .ts --ext .tsx .",
    "preversion": "docker -v && npm test && git push && npm install",
    "postversion": "git push && git push --tags && docker build -t $npm_package_config_docker_ns/$npm_package_name:latest . && docker-publish",
    "build": "rm -r ./dist; tsc && chmod +x dist/cli.js"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "config": {
    "docker": {
      "ns": "maxnowack",
      "name": "meili-sync",
      "skip": false,
      "silence": false,
      "strictSemver": false
    }
  },
  "keywords": [
    "mongodb",
    "meilisearch",
    "sync",
    "data"
  ],
  "author": "Max Nowack <max.nowack@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/lodash.get": "^4.4.6",
    "fs-extra": "^9.0.1",
    "js-yaml": "^3.14.0",
    "lodash.get": "^4.4.2",
    "meilisearch": "^0.11.3",
    "mongodb": "^3.5.9",
    "p-map": "^4.0.0",
    "p-retry": "^4.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/js-yaml": "^3.12.5",
    "@types/mongodb": "^3.5.25",
    "@types/p-map": "^2.0.0",
    "@types/p-retry": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "@vanioinformatika/docker-publish": "^2.1.2",
    "ava": "^3.10.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-sort-class-members": "^1.7.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
